{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":disableRateLimiting"],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": false,
  "automerge": true,
  "platformAutomerge": true,
  "platformCommit": true,
  "assignees": ["book000"],
  "configMigration": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)Dockerfile$", "(^|/)Dockerfile\\.[^/]*$"],
      "matchStrings": ["FROM node:(?<currentValue>.*?)-.*\\n"],
      "depNameTemplate": "node",
      "datasourceTemplate": "node",
      "versioningTemplate": "node"
    },
    {
      "fileMatch": ["(^|/)Dockerfile$", "(^|/)Dockerfile\\.[^/]*$"],
      "matchStrings": [
        "renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sENV .*?_VERSION=(?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "matchManagers": ["dockerfile"],
      "enabled": false
    },
    {
      "matchManagers": ["npm"],
      "rangeStrategy": "pin"
    },
    {
      "groupName": "fastify",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["fastify", "fastify-raw-body", "@fastify/**"]
    }
  ]
}
